initial_state: 'off'
alias: 'Sonos on TV mute'
trigger:
  platform: state
  entity_id: media_player.living_room
  from: 'paused'
  to: 'playing'
condition:
  condition: state
  entity_id: media_player.samsung_tv_remote
  state: 'on'
action:
  service: media_player.volume_mute
  data:
    entity_id: media_player.samsung_tv_remote
    is_volume_muted: true
